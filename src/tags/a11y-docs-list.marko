import { urls, a11yDocs, components, basePath } from "../data";
<for|_folder, data| in=a11yDocs>
  <li>
    <h3>
      <a href=`${urls.accessibility}/${data.name}`>
        ${data.properName}
      </a>
    </h3>
    <ul>
      <for|item| of=data.list>
        <const/isComponentPattern=(
          item.type === "component-patterns" && components[item.name]
        )>

        <const/link=(
          isComponentPattern
            ? `${basePath}components/${item.name}/accessibility`
            : `${basePath}accessibility/${item.type}/${item.name}`
        )>

        <li>
          <a href=link class="nav-link">
            ${item.properName}
          </a>
        </li>
      </for>
    </ul>
  </li>
</for>
