import "../../sass/landing-page.scss";
import {urls} from "../../data";
<div class="page-grid-container">

  <div class="site-wrapper">
    <!-- Header/Hero Section -->
    <div class="hero-card">
      <h1>Evo React Components</h1>
      <p>
        Leverage the world's most popular library for building complex,
        interactive user interfaces with reusable, stateful components.
      </p>
      <div class="hero-card__actions">
        <a href=urls.reactStorybook class="fake-btn fake-btn--primary">
          <div class="fake-btn__cell">
            <span>React Components Storybook</span>
            <svg class="icon icon--16">
              <use href="#icon-external-link-16"/>
            </svg>
          </div>
        </a>
        <a href=urls.components class="fake-btn">
          Explore React Components
        </a>
      </div>
    </div>
    <!-- Core Features Section -->
    <main class="page-content">
      <section id="features" class="page-section">
        <div class="landing-title">
          <h2>Why Choose Evo CSS?</h2>
        </div>

        <div class="content-container">
          <div class="content-card">
            <div>
              <svg class="icon icon--32">
                <use href="#icon-item-list-24"/>
              </svg>
            </div>
            <div class="content-card__body">
              <h3>Component-Based Architecture</h3>
              <p>
                Build complex UIs from small, isolated components. This ensures
                **maximum reusability**, predictability, and maintainability
                across large-scale applications.
              </p>
            </div>
          </div>
          <div class="content-card">
            <div>
              <svg class="icon icon--32">
                <use href="#icon-wrench-24"/>
              </svg>
            </div>
            <div class="content-card__body">
              <h3>Rich Ecosystem and Tooling</h3>
              <p>
                Access a massive library of third-party tools, state management
                solutions (Redux, Zustand), and developer utilities that
                accelerate project development and **scaling**.
              </p>
            </div>
          </div>
          <div class="content-card">
            <div>
              <svg class="icon icon--32">
                <use href="#icon-auto-adjust-24"/>
              </svg>
            </div>
            <div class="content-card__body">
              <h3>Modern Hooks for State Management</h3>
              <p>
                Utilize functional components and **hooks** (`useState`,
                `useEffect`) for predictable, declarative state management,
                making complex UI interactions simple and efficient.
              </p>
            </div>
          </div>
        </div>
      </section>
      <!-- Code Example Section (Mockup) -->
