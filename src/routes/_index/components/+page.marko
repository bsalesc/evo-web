import { components, urls } from "../../../data";

<style.scss>
  main ul.components-list {
    container-type: inline-size;
    container-name: components-list;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    list-style: none;
    padding: 0 0 30px;
    margin: 0;
  }

  main svg.image-placeholder {
    aspect-ratio: 16 / 9;
  }

  .card {
    box-shadow: var(--shadow-subtle);
    transition:
      transform 300ms cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateY(0);
  }

  .card:hover {
    box-shadow: var(--shadow-strong);
    transform: translateY(0.25rem);
  }

  .card__description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 40px;
    text-overflow: ellipsis;
  }

  .card__media {
    overflow: visible;
  }
  .card__footer {
    margin-block-start: var(--spacing-150);
  }

  .component-version {
    background-color: var(--color-background-primary);
    border-radius: 5px;
    color: var(--color-foreground-secondary);
    font-size: 0.75rem;
    margin-inline-end: 10px;
    padding: 3px 6px;
  }

  @container components-list (min-width: 512px) {
    main li {
      width: calc(100% / 2 - 14px);
    }
  }

  @container components-list (min-width: 768px) {
    main li {
      width: calc(100% / 3 - 14px);
    }
  }
  main {
    container-type: inline-size;
  }

  .link-container {
    display: flex;
    gap: var(--spacing-200);
    justify-content: center;
    margin-block-end: var(--spacing-400);
    .nav-link {
      display: inline-flex;
      gap: var(--spacing-50);
      font-weight: var(--font-weight-bold);
    }
  }

  @container (width < 512px) {
    .link-container {
      align-items: center;
      flex-direction: column;
    }
  }
</style>

<div class="link-container">
  <a class="nav-link" href=urls.markoStorybook>
    <span>Marko Components Storybook</span>
    <svg class="icon icon--16" height="16" width="16" aria-hidden="true">
      <use href="#icon-external-link-16"/>
    </svg>
  </a>
  <a class="nav-link" href=urls.reactStorybook>
    <span>React Components Storybook</span>
    <svg class="icon icon--16" height="16" width="16" aria-hidden="true">
      <use href="#icon-external-link-16"/>
    </svg>
  </a>
</div>

<div class="component-listings">
  <ul class="components-list">
    <for|key, component| in=components>
      <const/{ dsComponent, componentUrls, properName }=component>
      <if=component.metadata>
        <li>
          <a href=componentUrls?.overview class="card card--aspect-16-9">
            <div class="card__media">
              <object
                type="image/png"
                class="card__hero-image"
                data=component.pageImg
                aria-label=component.name>
                <svg
                  aria-label="image not found"
                  class="image-placeholder .card__hero-image"
                  role="img">
                  <use href="#icons-image-placeholder"/>
                </svg>
              </object>
            </div>
            <div class="card__main">
              <h2 class="card__title">
                ${component.properName}
              </h2>
              <div class="card__description">
                ${component?.metadata.description}
              </div>
              <div class="card__footer">
                <if=dsComponent?.version && component?.cssPage>
                  <span class="component-version">
                    CSS v${dsComponent?.version}
                  </span>
                </if>
                <if=(
                  dsComponent?.markoVersion && component?.componentUrls.marko
                )>
                  <span class="component-version">
                    Marko v${dsComponent?.markoVersion}
                  </span>
                </if>
                <if=(
                  dsComponent?.reactVersion && component?.componentUrls.react
                )>
                  <span class="component-version">
                    React v${dsComponent?.reactVersion}
                  </span>
                </if>
              </div>
            </div>
          </a>
        </li>
      </if>
    </for>
  </ul>
</div>
